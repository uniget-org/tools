#syntax=docker/dockerfile:1.6.0

FROM nicholasdille/ubuntu:22.04 AS prepare
COPY --from=ghcr.io/uniget-org/tools/uniget-build:latest \
    /etc/profile.d/ \
    /etc/profile.d/
SHELL [ "bash", "-clo", "errexit" ]
ARG name
ARG version
RUN <<EOF
check-github-release-asset "gotestyourself/gotestsum" "v${version}" "gotestsum_${version}_linux_${alt_arch}.tar.gz"
curl --silent --location --fail "https://github.com/gotestyourself/gotestsum/releases/download/v${version}/gotestsum_${version}_linux_${alt_arch}.tar.gz" \
| tar --extract --gzip --directory="${prefix}${target}/bin/" --no-same-owner \
    gotestsum
EOF