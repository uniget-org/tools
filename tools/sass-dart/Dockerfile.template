#syntax=docker/dockerfile:1.7.0

FROM ghcr.io/uniget-org/images/ubuntu:22.04 AS prepare
COPY --from=ghcr.io/uniget-org/tools/uniget-build:latest \
    /etc/profile.d/ \
    /etc/profile.d/
SHELL [ "bash", "-clo", "errexit" ]
ARG name
ARG version
RUN <<EOF
echo "### Setting architecture string for ${TARGETPLATFORM}"
case "${arch}" in
    x86_64)
        export arch_suffix="x64"
        ;;
    aarch64)
        export arch_suffix="${alt_arch}"
        ;;
    *)
        echo "ERROR: Unsupported architecture ${arch}."
        exit 1
        ;;
esac
echo "    Using ${arch_suffix}"

check-github-release-asset "sass/dart-sass" "${version}" "dart-sass-${version}-linux-${arch_suffix}-musl.tar.gz"
mkdir -p "${prefix}/libexec/dart-sass"
curl --silent --location --fail "https://github.com/sass/dart-sass/releases/download/${version}/dart-sass-${version}-linux-${arch_suffix}-musl.tar.gz" \
| tar --extract --gzip --directory="${prefix}/libexec/dart-sass" --strip-components=2 --no-same-owner \
    dart-sass/src/sass.snapshot
EOF
COPY --chmod=0755 <<EOF /uniget_bootstrap/bin/sass
#!/bin/bash
SCRIPT_DIR="$( dirname "$( readlink -f "\$0" )" )"
exec dartaotruntime "\${SCRIPT_DIR}/../libexec/dart-sass/sass.snapshot"
EOF