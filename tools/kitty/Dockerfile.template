FROM ghcr.io/uniget-org/images/ubuntu:24.04 AS prepare
COPY --from=ghcr.io/uniget-org/tools/uniget-build:latest \
    /etc/profile.d/ \
    /etc/profile.d/
SHELL [ "bash", "-clo", "errexit" ]
ARG name
ARG version
RUN <<EOF
echo "### Setting architecture string for ${TARGETPLATFORM}"
case "${arch}" in
    x86_64)
        export arch_suffix="${arch}"
        ;;
    aarch64)
        export arch_suffix="${alt_arch}"
        ;;
    *)
        echo "ERROR: Unsupported architecture ${arch}."
        exit 1
        ;;
esac
echo "    Using ${arch_suffix}"

check-github-release-asset "kovidgoyal/kitty" "v${version}" "kitty-${version}-${arch_suffix}.txz"
curl --silent --show-error --location --fail "https://github.com/kovidgoyal/kitty/releases/download/v${version}/kitty-${version}-${arch_suffix}.txz" \
| tar --extract --xz --directory="${prefix}/" --no-same-owner
EOF