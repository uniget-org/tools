#syntax=docker/dockerfile:1.8.1

FROM ghcr.io/uniget-org/images/ubuntu:24.04@sha256:178a01206383923b589ecfe3bace55431c4b8528086909ffcdc1ef88de4da10f AS prepare
COPY --from=ghcr.io/uniget-org/tools/uniget-build:latest \
    /etc/profile.d/ \
    /etc/profile.d/
SHELL [ "bash", "-clo", "errexit" ]
ARG name
ARG version
RUN <<EOF
check-github-release-asset "zitadel/zitadel" "v${version}" "zitadel-linux-${alt_arch}.tar.gz"
curl --silent --show-error --location --fail "https://github.com/zitadel/zitadel/releases/download/v${version}/zitadel-linux-${alt_arch}.tar.gz" \
| tar --extract --gzip --directory="${prefix}/bin/" --strip-components=1 --no-same-owner \
    zitadel-linux-${alt_arch}/zitadel

"${prefix}/bin/zitadel" completion bash >"${prefix}/share/bash-completion/completions/zitadel"
"${prefix}/bin/zitadel" completion fish >"${prefix}/share/fish/vendor_completions.d/zitadel.fish"
"${prefix}/bin/zitadel" completion zsh >"${prefix}/share/zsh/vendor-completions/_zitadel"
EOF