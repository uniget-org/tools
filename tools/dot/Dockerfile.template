#syntax=docker/dockerfile:1.6.0

ARG ref=main

FROM ghcr.io/uniget-org/tools/go:${ref} AS go

FROM ghcr.io/uniget-org/tools/base:${ref} AS prepare
COPY --link --from=go / /
RUN <<EOF
apt-get update
apt-get -y install --no-install-recommends \
    build-essential \
    make
EOF
WORKDIR /go/src/github.com/goccy/go-graphviz
ARG name
ARG version
RUN <<EOF
check-clone https://github.com/goccy/go-graphviz "v${version}"
git clone -q --config advice.detachedHead=false --depth 1 --branch "v${version}" https://github.com/goccy/go-graphviz .
go build -ldflags '-extldflags "-static"' -o "${prefix}${target}/bin/dot" ./cmd/dot
EOF