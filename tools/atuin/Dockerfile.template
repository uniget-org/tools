#syntax=docker/dockerfile:1.18.0@sha256:dabfc0969b935b2080555ace70ee69a5261af8a8f1b4df97b9e7fbcf6722eddf

FROM registry.gitlab.com/uniget-org/images/ubuntu:24.04 AS prepare
COPY --from=ghcr.io/uniget-org/tools/uniget-build:latest \
    /etc/profile.d/ \
    /etc/profile.d/
SHELL [ "bash", "-clo", "errexit" ]
ARG name
ARG version
RUN --mount=type=cache,target=/var/cache/uniget/download <<EOF
url="https://github.com/atuinsh/atuin/releases/download/v${version}/atuin-${arch}-unknown-linux-musl.tar.gz"
filename="$( basename "${url}" )"

check-github-release-asset "atuinsh/atuin" "v${version}" "${filename}"
curl --silent --show-error --location --fail --output "${uniget_cache_download}/${filename}" \
    "${url}"

tar --file="${uniget_cache_download}/${filename}" --list
tar --file="${uniget_cache_download}/${filename}" --extract --gzip --directory="${prefix}/bin" --strip-components=1 --no-same-owner \
    "atuin-${arch}-unknown-linux-musl/atuin"
EOF
RUN <<EOF
"${prefix}/bin/atuin" gen-completions --shell=bash >"${prefix}/share/bash-completion/completions/atuin"
"${prefix}/bin/atuin" gen-completions --shell=fish >"${prefix}/share/fish/vendor_completions.d/atuin.fish"
"${prefix}/bin/atuin" gen-completions --shell=zsh >"${prefix}/share/zsh/vendor-completions/_atuin"
EOF