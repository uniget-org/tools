#syntax=docker/dockerfile:1.6.0

ARG ref=main

FROM ghcr.io/uniget-org/tools/make:${ref} AS make
FROM ghcr.io/uniget-org/tools/libmnl:${ref} AS libmnl
FROM ghcr.io/uniget-org/tools/libnftnl:${ref} AS libnftnl

FROM ghcr.io/uniget-org/tools/base:${ref} AS prepare
RUN <<EOF
apt-get update
apt-get -y install --no-install-recommends \
    build-essential \
    autoconf \
    automake \
    libtool \
    git \
    libnfnetlink-dev
EOF
COPY --from=make / /
COPY --from=libmnl / /
COPY --from=libnftnl / /
WORKDIR /tmp/iptables
ARG name
ARG version
RUN <<EOF
check-clone "https://git.netfilter.org/iptables/" "v${version}"
git clone --config advice.detachedHead=false --depth 1 --branch "v${version}" git://git.netfilter.org/iptables .
EOF
RUN <<EOF
./autogen.sh
./configure --prefix="${prefix}${target}"
make
make install
EOF