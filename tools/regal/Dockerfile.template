#syntax=docker/dockerfile:1.21.0@sha256:27f9262d43452075f3c410287a2c43f5ef1bf7ec2bb06e8c9eeb1b8d453087bc

FROM registry.gitlab.com/uniget-org/images/ubuntu:24.04 AS prepare
COPY --from=ghcr.io/uniget-org/tools/uniget-build:latest \
    /etc/profile.d/ \
    /etc/profile.d/
SHELL [ "bash", "-clo", "errexit" ]
ARG name
ARG version
RUN --mount=type=cache,target=/var/cache/uniget/download <<EOF
echo "### Setting architecture string for ${TARGETPLATFORM}"
case "${arch}" in
    x86_64)
        export arch_suffix="${arch}"
        ;;
    aarch64)
        export arch_suffix="${alt_arch}"
        ;;
    *)
        echo "ERROR: Unsupported architecture ${arch}."
        exit 1
        ;;
esac
echo "    Using ${arch_suffix}"

url="https://github.com/open-policy-agent/regal/releases/download/v${version}/regal_Linux_${arch_suffix}"
filename="$( basename "${url}" )"

check-github-release-asset "open-policy-agent/regal" "v${version}" "${filename}"
curl --silent --show-error --location --fail --output "${uniget_cache_download}/${filename}" \
    "${url}"

install --mode=0755 \
    "${uniget_cache_download}/${filename}" \
    "${prefix}/bin/regal"


"${prefix}/bin/regal" completion bash >"${prefix}/share/bash-completion/completions/regal"
"${prefix}/bin/regal" completion fish >"${prefix}/share/fish/vendor_completions.d/regal.fish"
"${prefix}/bin/regal" completion zsh >"${prefix}/share/zsh/vendor-completions/_regal"
EOF