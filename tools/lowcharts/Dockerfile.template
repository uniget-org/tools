#syntax=docker/dockerfile:1.8.1

FROM ghcr.io/uniget-org/images/ubuntu:24.04 AS prepare
COPY --from=ghcr.io/uniget-org/tools/uniget-build:latest \
    /etc/profile.d/ \
    /etc/profile.d/
SHELL [ "bash", "-clo", "errexit" ]
ARG name
ARG version
RUN <<EOF
check-github-release-asset "juan-leon/lowcharts" "v${version}" "lowcharts-${version}-x86_64-unknown-linux-musl.tar.gz"
curl --silent --show-error --location --fail "https://github.com/juan-leon/lowcharts/releases/download/v${version}/lowcharts-${version}-x86_64-unknown-linux-musl.tar.gz" \
| tar --extract --gzip --directory="${prefix}/bin/" --no-same-owner \
    lowcharts
EOF