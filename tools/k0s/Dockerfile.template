#syntax=docker/dockerfile:1.6.0

ARG ref=main

FROM ghcr.io/uniget-org/tools/base:${ref} AS prepare
ARG name
ARG version
RUN <<EOF
check-github-release-asset "k0sproject/k0s" "v${version}" "k0s-v${version}-${alt_arch}"
curl --silent --location --fail --output "${prefix}${target}/bin/k0s" \
    "https://github.com/k0sproject/k0s/releases/download/v${version}/k0s-v${version}-${alt_arch}"
chmod +x "${prefix}${target}/bin/k0s"

"${prefix}${target}/bin/k0s" completion bash >"${prefix}${target}/share/bash-completion/completions/k0s"
"${prefix}${target}/bin/k0s" completion fish >"${prefix}${target}/share/fish/vendor_completions.d/k0s.fish"
"${prefix}${target}/bin/k0s" completion zsh >"${prefix}${target}/share/zsh/vendor-completions/_k0s"
EOF