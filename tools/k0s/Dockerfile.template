#syntax=docker/dockerfile:1.7.1

FROM ghcr.io/uniget-org/images/ubuntu:22.04 AS prepare
COPY --from=ghcr.io/uniget-org/tools/uniget-build:latest \
    /etc/profile.d/ \
    /etc/profile.d/
SHELL [ "bash", "-clo", "errexit" ]
ARG name
ARG version
RUN <<EOF
check-github-release-asset "k0sproject/k0s" "v${version}" "k0s-v${version}-${alt_arch}"
curl --silent --show-error --location --fail --output "${prefix}/bin/k0s" \
    "https://github.com/k0sproject/k0s/releases/download/v${version}/k0s-v${version}-${alt_arch}"
chmod +x "${prefix}/bin/k0s"

"${prefix}/bin/k0s" completion bash >"${prefix}/share/bash-completion/completions/k0s"
"${prefix}/bin/k0s" completion fish >"${prefix}/share/fish/vendor_completions.d/k0s.fish"
"${prefix}/bin/k0s" completion zsh >"${prefix}/share/zsh/vendor-completions/_k0s"
EOF