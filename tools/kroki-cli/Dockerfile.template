#syntax=docker/dockerfile:1.11.0@sha256:1f2be5a2aa052cbd9aedf893d17c63277c3d1c51b3fb0f3b029c6b34f658d057

FROM registry.gitlab.com/uniget-org/images/ubuntu:24.04 AS prepare
COPY --from=ghcr.io/uniget-org/tools/uniget-build:latest \
    /etc/profile.d/ \
    /etc/profile.d/
SHELL [ "bash", "-clo", "errexit" ]
ARG name
ARG version
RUN --mount=type=cache,target=/var/cache/uniget/download <<EOF
url="https://github.com/yuzutech/kroki-cli/releases/download/v${version}/kroki-cli_${version}_linux_amd64.tar.gz"
filename="$( basename "${url}" )"

check-github-release-asset "yuzutech/kroki-cli" "v${version}" "${filename}"
curl --silent --show-error --location --fail --output "${uniget_cache_download}/${filename}" \
    "${url}"

tar --file="${uniget_cache_download}/${filename}" --list
tar --file="${uniget_cache_download}/${filename}" --extract --gzip --directory="${prefix}/bin/" --no-same-owner \
    kroki

"${prefix}/bin/kroki" completion bash >"${prefix}/share/bash-completion/completions/kroki-cli"
"${prefix}/bin/kroki" completion fish >"${prefix}/share/fish/vendor_completions.d/kroki-cli.fish"
"${prefix}/bin/kroki" completion zsh >"${prefix}/share/zsh/vendor-completions/_kroki-cli"
EOF