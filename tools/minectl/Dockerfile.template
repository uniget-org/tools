#syntax=docker/dockerfile:1.8.0

FROM ghcr.io/uniget-org/images/ubuntu:22.04 AS prepare
COPY --from=ghcr.io/uniget-org/tools/uniget-build:latest \
    /etc/profile.d/ \
    /etc/profile.d/
SHELL [ "bash", "-clo", "errexit" ]
ARG name
ARG version
RUN <<EOF
check-github-release-asset "dirien/minectl" "v${version}" "minectl_${version}_linux_${alt_arch}.tar.gz"
curl --silent --show-error --location --fail "https://github.com/dirien/minectl/releases/download/v${version}/minectl_${version}_linux_${alt_arch}.tar.gz" \
| tar --extract --gzip --directory="${prefix}/bin" --no-same-owner \
    minectl
"${prefix}/bin/minectl" completion bash >"${prefix}/share/bash-completion/completions/minectl"
"${prefix}/bin/minectl" completion fish >"${prefix}/share/fish/vendor_completions.d/minectl.fish"
"${prefix}/bin/minectl" completion zsh >"${prefix}/share/zsh/vendor-completions/_minectl"
EOF