#syntax=docker/dockerfile:1.18.0@sha256:38387523653efa0039f8e1c89bb74a30504e76ee9f565e25c9a09841f9427b05

FROM registry.gitlab.com/uniget-org/images/ubuntu:24.04 AS prepare
COPY --from=ghcr.io/uniget-org/tools/uniget-build:latest \
    /etc/profile.d/ \
    /etc/profile.d/
SHELL [ "bash", "-clo", "errexit" ]
ARG name
ARG version
RUN --mount=type=cache,target=/var/cache/uniget/download <<EOF
url="https://github.com/buildpacks-community/kpack-cli/releases/download/v${version}/kp-linux-amd64-${version}"
filename="$( basename "${url}" )"

check-github-release-asset "buildpacks-community/kpack-cli" "v${version}" "${filename}"
curl --silent --show-error --location --fail --output "${uniget_cache_download}/${filename}" \
    "${url}"

install --mode=0755 \
    "${uniget_cache_download}/${filename}" \
    "${prefix}/bin/kp"

"${prefix}/bin/kp" completion bash >"${prefix}/share/bash-completion/completions/kp"
"${prefix}/bin/kp" completion fish >"${prefix}/share/fish/vendor_completions.d/kp.fish"
"${prefix}/bin/kp" completion zsh >"${prefix}/share/zsh/vendor-completions/_kp"
EOF