#syntax=docker/dockerfile:1.7.1

FROM ghcr.io/uniget-org/images/ubuntu:22.04 AS prepare
COPY --from=ghcr.io/uniget-org/tools/uniget-build:latest \
    /etc/profile.d/ \
    /etc/profile.d/
SHELL [ "bash", "-clo", "errexit" ]
ARG name
ARG version
RUN <<EOF
check-github-release-asset "civo/cli" "v${version}" "civo-${version}-linux-${alt_arch}.tar.gz"
curl --silent --show-error --location --fail "https://github.com/civo/cli/releases/download/v${version}/civo-${version}-linux-${alt_arch}.tar.gz" \
| tar --extract --gzip --directory="${prefix}/bin/" --no-same-owner \
    civo

"${prefix}/bin/civo" completion bash >"${prefix}/share/bash-completion/completions/civo"
"${prefix}/bin/civo" completion fish >"${prefix}/share/fish/vendor_completions.d/civo.fish"
"${prefix}/bin/civo" completion zsh >"${prefix}/share/zsh/vendor-completions/_civo"
EOF