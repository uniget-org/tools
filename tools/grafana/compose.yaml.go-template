services:
  grafana:
    image: grafana/grafana-oss:{{ .Version }}
    command: -H unix:///var/run/docker.sock
    restart: always 
    ports:
    - "127.0.0.1:3000:3000"
    volumes:
    - "/var/run/docker.sock:/var/run/docker.sock"
    - grafana-storage:/var/lib/grafana

volumes:
  grafana-storage: