{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":docker",
    "docker:enableMajor",
    "docker:pinDigests",
    ":ignoreUnstable",
    ":pinVersions",
    ":separateMajorReleases",
    ":separatePatchReleases",
    ":semanticCommits"
  ],
  "timezone": "Europe/Berlin",
  "configMigration": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "platformAutomerge": true,
  "rebaseWhen": "conflicted",
  "rebaseLabel": "renovate/rebase",
  "stopUpdatingLabel": "renovate/stop-updating",
  "recreateWhen": "auto",
  "major": {
    "labels": [
      "bump/major",
      "type/renovate"
    ]
  },
  "minor": {
    "labels": [
      "bump/minor",
      "type/renovate"
    ]
  },
  "patch": {
    "labels": [
      "bump/patch",
      "type/renovate"
    ]
  },
  "pin": {
    "labels": [
      "bump/pin",
      "type/renovate"
    ]
  },
  "digest": {
    "labels": [
      "bump/digest",
      "type/renovate"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "enabled": false,
      "matchPackageNames": [
        "ghcr.io/uniget-org/tools/{/,}**",
        "ghcr.io/uniget-org/images/{/,}**",
        "registry.gitlab.com/uniget-org/images/{/,}**"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/|\\.)Dockerfile[^/]*$/"
      ],
      "matchStrings": [
        "#syntax=(?<depName>[^:]+):(?<currentValue>[^@]+)(@.+)?\\n"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "docker/dockerfile"
    },
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "tools/*/manifest.yaml"
      ],
      "matchStrings": [
        "{\"datasource\":renovate.datasource,\"depName\":renovate.package,\"extractVersion\":renovate.extractVersion,\"currentValue\":version,\"versioning\":renovate.versioning,\"packageNameTemplate\":renovate.url,\"registryUrlTemplate\":renovate.api}"
      ]
    }
  ]
}
